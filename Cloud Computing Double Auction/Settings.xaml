<Window
    x:Class="Cloud_Computing_Double_Auction.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Cloud_Computing_Double_Auction"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Settings"
    Width="900"
    Height="600"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Button
            x:Name="btnBack"
            Width="96"
            Height="55"
            Margin="10,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="BtnBack_Click"
            Content="&lt;&lt;&lt;" />
        <TextBlock
            Width="536"
            Height="25"
            Margin="125,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap"><Run Text="Enter Users"/><Run Text=" "/><Run Text="Quantities "/><Run Text="Manually"/><Run Text=" (i.e. 12 24 25 65 45):"/></TextBlock>
        <TextBox
            x:Name="txtUserQuantity"
            Width="727"
            Height="23"
            Margin="125,35,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap" />
        <TextBlock
            Margin="128,63,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap"><Run Text="Enter Users" /><Run Text=" Prices Manually" /><Run Text=":" /></TextBlock>
        <TextBox
            x:Name="txtUserPrices"
            Width="727"
            Height="23"
            Margin="125,88,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap" />
        <TextBlock
            Margin="125,116,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="Enter Providers Supply Manually:"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="txtProviderQuantity"
            Width="727"
            Height="23"
            Margin="125,141,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap" />
        <TextBlock
            Margin="125,169,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="Enter Providers Prices Manually:"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="txtProviderPrices"
            Width="727"
            Height="23"
            Margin="125,194,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap" />
        <CheckBox
            x:Name="chkUser"
            Margin="486,250,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="User" />
        <CheckBox
            x:Name="chkProvider"
            Margin="486,272,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Provider " />
        <ComboBox
            x:Name="cmbUsers"
            Width="60"
            Height="32"
            Margin="282,238,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            RenderTransformOrigin="0.857,0.514" />
        <ComboBox
            x:Name="cmbProviders"
            Width="60"
            Height="32"
            Margin="282,287,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" />
        <TextBlock
            Margin="125,245,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="Number of Users:"
            TextWrapping="Wrap" />
        <TextBlock
            Margin="125,295,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap"><Run Text="Number of " /><Run Text="Providers:" /></TextBlock>
        <TextBlock
            Margin="391,245,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="Manual Entry:"
            TextWrapping="Wrap" />
    </Grid>
</Window>
