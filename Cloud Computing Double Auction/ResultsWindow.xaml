<Window
    x:Class="Cloud_Computing_Double_Auction.ResultsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Cloud_Computing_Double_Auction"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Results Window"
    Width="900"
    Height="600"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <ScrollViewer>
            <Canvas Width="894" Height="1162">
                <Rectangle
                    Canvas.Left="135"
                    Canvas.Top="80"
                    Width="320"
                    Height="325"
                    Fill="#FFF4F4F5"
                    Stroke="LightGray" />

                <Rectangle
                    Canvas.Left="506"
                    Canvas.Top="80"
                    Width="320"
                    Height="325"
                    Fill="#FFF4F4F5"
                    Stroke="LightGray" />

                <Rectangle
                    Canvas.Left="180"
                    Canvas.Top="506"
                    Width="555"
                    Height="180"
                    Fill="#FFF4F4F5"
                    Stroke="LightGray" />

                <Rectangle
                    Canvas.Left="180"
                    Canvas.Top="734"
                    Width="555"
                    Height="180"
                    Fill="#FFF4F4F5"
                    Stroke="LightGray" />

                <Button
                    x:Name="btnBack"
                    Width="96"
                    Height="55"
                    Margin="10,10,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Click="BtnBack_Click"
                    Content="&lt;&lt;&lt;" />
                <DataGrid
                    x:Name="dgInitUserData"
                    Canvas.Left="135"
                    Canvas.Top="80"
                    Width="320"
                    Height="Auto"
                    MaxHeight="330"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    AutoGenerateColumns="False"
                    BorderBrush="LightGray"
                    HeadersVisibility="Column"
                    HorizontalGridLinesBrush="LightGray"
                    RowHeight="30"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    VerticalGridLinesBrush="LightGray">

                    <DataGrid.Columns>
                        <DataGridTextColumn
                            MinWidth="100"
                            Binding="{Binding Path=ID}"
                            Header="User ID" />
                        <DataGridTextColumn
                            MinWidth="100"
                            Binding="{Binding Path=Quantity}"
                            Header="Demand Quantity" />
                        <DataGridTextColumn
                            MinWidth="100"
                            Binding="{Binding Path=BidPrice}"
                            Header="Bid Price" />
                    </DataGrid.Columns>

                    <DataGrid.Resources>
                        <Style TargetType="{x:Type DataGridRow}">
                            <Setter Property="IsHitTestVisible" Value="False" />
                        </Style>
                    </DataGrid.Resources>
                </DataGrid>

                <DataGrid
                    x:Name="dgInitProvData"
                    Canvas.Left="506"
                    Canvas.Top="80"
                    Width="320"
                    Height="Auto"
                    MaxHeight="330"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    AutoGenerateColumns="False"
                    BorderBrush="LightGray"
                    HeadersVisibility="Column"
                    HorizontalGridLinesBrush="LightGray"
                    RowHeight="30"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    VerticalGridLinesBrush="LightGray">

                    <DataGrid.Columns>
                        <DataGridTextColumn
                            MinWidth="100"
                            Binding="{Binding Path=ID}"
                            Header="Provider ID" />
                        <DataGridTextColumn
                            MinWidth="100"
                            Binding="{Binding Path=Quantity}"
                            Header="Supply Quantity" />
                        <DataGridTextColumn
                            MinWidth="110"
                            Binding="{Binding Path=BidPrice}"
                            Header="Bid Price" />
                    </DataGrid.Columns>

                    <DataGrid.Resources>
                        <Style TargetType="{x:Type DataGridRow}">
                            <Setter Property="IsHitTestVisible" Value="False" />
                        </Style>
                    </DataGrid.Resources>

                </DataGrid>

                <DataGrid
                    x:Name="dgWinningUsers"
                    Canvas.Left="180"
                    Canvas.Top="506"
                    Width="555"
                    Height="Auto"
                    MaxHeight="180"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    AutoGenerateColumns="False"
                    BorderBrush="LightGray"
                    HeadersVisibility="Column"
                    HorizontalGridLinesBrush="LightGray"
                    RowHeight="30"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    VerticalGridLinesBrush="LightGray">

                    <DataGrid.Columns>
                        <DataGridTextColumn
                            MinWidth="100"
                            Binding="{Binding Path=ID}"
                            Header="User ID" />
                        <DataGridTextColumn
                            MinWidth="100"
                            Binding="{Binding Path=Quantity}"
                            Header="Demand Quantity" />
                        <DataGridTextColumn
                            MinWidth="100"
                            Binding="{Binding Path=BidPrice}"
                            Header="Bid Price" />
                        <DataGridTextColumn
                            MinWidth="100"
                            Binding="{Binding Path=FinalQuantity}"
                            Header="Final Quantity" />
                        <DataGridTextColumn
                            MinWidth="130"
                            Binding="{Binding Path=TotalPrice}"
                            Header="Price Paid" />
                    </DataGrid.Columns>

                    <DataGrid.Resources>
                        <Style TargetType="{x:Type DataGridRow}">
                            <Setter Property="IsHitTestVisible" Value="False" />
                        </Style>
                    </DataGrid.Resources>

                </DataGrid>

                <DataGrid
                    x:Name="dgWinningProv"
                    Canvas.Left="180"
                    Canvas.Top="734"
                    Width="555"
                    Height="Auto"
                    MaxHeight="180"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    AutoGenerateColumns="False"
                    BorderBrush="LightGray"
                    HeadersVisibility="Column"
                    HorizontalGridLinesBrush="LightGray"
                    RowHeight="30"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    VerticalGridLinesBrush="LightGray">

                    <DataGrid.Columns>
                        <DataGridTextColumn
                            MinWidth="100"
                            Binding="{Binding Path=ID}"
                            Header="User ID" />
                        <DataGridTextColumn
                            MinWidth="100"
                            Binding="{Binding Path=Quantity}"
                            Header="Supply Quantity" />
                        <DataGridTextColumn
                            MinWidth="100"
                            Binding="{Binding Path=BidPrice}"
                            Header="Bid Price" />
                        <DataGridTextColumn
                            MinWidth="100"
                            Binding="{Binding Path=FinalQuantity}"
                            Header="Final Quantity" />
                        <DataGridTextColumn
                            MinWidth="130"
                            Binding="{Binding Path=TotalPrice}"
                            Header="Price Received" />
                    </DataGrid.Columns>

                    <DataGrid.Resources>
                        <Style TargetType="{x:Type DataGridRow}">
                            <Setter Property="IsHitTestVisible" Value="False" />
                        </Style>
                    </DataGrid.Resources>

                </DataGrid>
                <TextBlock
                    Canvas.Left="135"
                    Canvas.Top="18"
                    Width="671"
                    Height="47"
                    FontSize="36"
                    TextAlignment="Center"
                    TextWrapping="Wrap"><Run Text="User/Provider" TextDecorations="Underline" /><Run Text=" Initial Bids" TextDecorations="Underline" /><LineBreak /></TextBlock>
                <TextBlock
                    Canvas.Left="135"
                    Canvas.Top="438"
                    Width="671"
                    Height="47"
                    FontSize="36"
                    TextAlignment="Center"
                    TextWrapping="Wrap"><Run Text="Winning " TextDecorations="Underline" /><Run Text="User/Provider" TextDecorations="Underline" /><Run Text=" Initial Bids" TextDecorations="Underline" /><LineBreak /></TextBlock>
            </Canvas>
        </ScrollViewer>
    </Grid>
</Window>
