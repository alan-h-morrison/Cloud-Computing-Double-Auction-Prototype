<Window
    x:Class="Cloud_Computing_Double_Auction.ResultsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Cloud_Computing_Double_Auction"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Results Window"
    Width="900"
    Height="600"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <ScrollViewer>
            <Canvas Width="900" Height="1200">
                <Rectangle
                    Canvas.Left="135"
                    Canvas.Top="10"
                    Width="290"
                    Height="325"
                    Fill="#FFF4F4F5"
                    Stroke="LightGray" />

                <Rectangle
                    Canvas.Left="450"
                    Canvas.Top="10"
                    Width="290"
                    Height="325"
                    Fill="#FFF4F4F5"
                    Stroke="LightGray" />

                <Button
                    x:Name="btnBack"
                    Width="96"
                    Height="55"
                    Margin="10,10,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Click="BtnBack_Click"
                    Content="&lt;&lt;&lt;" />
                <DataGrid
                    x:Name="dgInitUserData"
                    Canvas.Left="135"
                    Canvas.Top="10"
                    Width="290"
                    Height="Auto"
                    MaxHeight="330"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    AutoGenerateColumns="False"
                    BorderBrush="LightGray"
                    HeadersVisibility="Column"
                    HorizontalGridLinesBrush="LightGray"
                    RowHeight="30"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    VerticalGridLinesBrush="LightGray">

                    <DataGrid.Columns>
                        <DataGridTextColumn
                            MinWidth="65"
                            Binding="{Binding Path=UserID}"
                            Header="User ID" />
                        <DataGridTextColumn Binding="{Binding Path=Demand}" Header="Demand Quantity" />
                        <DataGridTextColumn
                            MinWidth="125"
                            Binding="{Binding Path=BidPrice}"
                            Header="Bid Price" />
                    </DataGrid.Columns>

                    <DataGrid.Resources>
                        <Style TargetType="{x:Type DataGridRow}">
                            <Setter Property="IsHitTestVisible" Value="False" />
                        </Style>
                    </DataGrid.Resources>
                </DataGrid>

                <DataGrid
                    x:Name="dgInitProvData"
                    Canvas.Left="450"
                    Canvas.Top="10"
                    Width="290"
                    Height="Auto"
                    MaxHeight="330"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    AutoGenerateColumns="False"
                    BorderBrush="LightGray"
                    HeadersVisibility="Column"
                    HorizontalGridLinesBrush="LightGray"
                    RowHeight="30"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    VerticalGridLinesBrush="LightGray">

                    <DataGrid.Columns>
                        <DataGridTextColumn
                            MinWidth="85"
                            Binding="{Binding Path=ProviderID}"
                            Header="Provider ID" />
                        <DataGridTextColumn Binding="{Binding Path=Supply}" Header="Supply Quantity" />
                        <DataGridTextColumn
                            MinWidth="100"
                            Binding="{Binding Path=BidPrice}"
                            Header="Bid Price" />
                    </DataGrid.Columns>

                    <DataGrid.Resources>
                        <Style TargetType="{x:Type DataGridRow}">
                            <Setter Property="IsHitTestVisible" Value="False" />
                        </Style>
                    </DataGrid.Resources>
                </DataGrid>
            </Canvas>
        </ScrollViewer>
    </Grid>
</Window>
